@page "/admin"
@using Microsoft.AspNetCore.Authorization

<AuthorizeView Roles="Admin">
    <Authorized>
        <div class="admin-container">
            <div class="admin-header">
                <h1 class="admin-title">Admin Կառավարման Վահանակ</h1>
            </div>

            <div class="quick-actions">
                <div class="actions-grid">
                    <a href="/admin/items" class="action-card">
                        <div class="action-icon">🎸</div>
                        <h3 class="action-title">Կառավարել ապրանքները</h3>
                        <p class="action-description">Ավելացնել, թարմացնել, կամ ջնջել ապրանքներ</p>
                    </a>
                </div>
            </div>

            <div class="recent-section">
                <h2 class="section-title">Պատվերներ</h2>

                @if (OrderForAdmin is null)
                {
                    <p>Loading...</p>
                }
                else
                {
                    @foreach(var Order in OrderForAdmin)
                    {
                        <div class="recent-orders">
                            <div class="order-row">
                                <span class="order-id">@Order.Id</span>
                                <span class="order-customer">@Order.UserId</span>
                                <span class="order-amount">@Order.Item.Amount</span>
                                <span class="order-status status-pending">Pending</span>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <RedirectToLogin></RedirectToLogin>
    </NotAuthorized>

</AuthorizeView>

<style>
    .admin-container {
        animation: fadeIn 0.6s ease-in;
    }

    .admin-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .admin-title {
        font-size: 3rem;
        color: #d4a574;
        margin-bottom: 0.5rem;
    }

    .admin-subtitle {
        font-size: 1.2rem;
        color: #b8b8b8;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .stat-card {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(212, 165, 116, 0.3);
        border-radius: 12px;
        padding: 1.5rem;
        display: flex;
        gap: 1.5rem;
        align-items: center;
        transition: all 0.3s ease;
    }

        .stat-card:hover {
            background: rgba(255, 255, 255, 0.08);
            border-color: #d4a574;
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(212, 165, 116, 0.2);
        }

    .stat-icon {
        font-size: 3rem;
    }

    .stat-content {
        display: flex;
        flex-direction: column;
        gap: 0.3rem;
    }

    .stat-label {
        color: #b8b8b8;
        font-size: 0.9rem;
    }

    .stat-value {
        color: #d4a574;
        font-size: 2rem;
        font-weight: bold;
    }

    .stat-change {
        font-size: 0.85rem;
    }

        .stat-change.positive {
            color: #4caf50;
        }

    .section-title {
        font-size: 2rem;
        color: #d4a574;
        margin-bottom: 1.5rem;
    }

    .quick-actions {
        margin-bottom: 3rem;
    }

    .actions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 1.5rem;
    }

    .action-card {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(212, 165, 116, 0.3);
        border-radius: 12px;
        padding: 2rem;
        text-align: center;
        text-decoration: none;
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .action-card:hover {
            background: rgba(255, 255, 255, 0.08);
            border-color: #d4a574;
            transform: translateY(-8px);
            box-shadow: 0 12px 30px rgba(212, 165, 116, 0.3);
        }

    .action-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .action-title {
        color: #d4a574;
        font-size: 1.3rem;
        margin-bottom: 0.5rem;
    }

    .action-description {
        color: #b8b8b8;
        font-size: 0.95rem;
    }

    .recent-section {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(212, 165, 116, 0.3);
        border-radius: 12px;
        padding: 2rem;
    }

    .recent-orders {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .order-row {
        display: grid;
        grid-template-columns: 1fr 1.5fr 1fr 1fr;
        gap: 1rem;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.03);
        border-radius: 8px;
        align-items: center;
    }

    .order-id {
        color: #d4a574;
        font-weight: 600;
    }

    .order-customer {
        color: #e8e8e8;
    }

    .order-amount {
        color: #d4a574;
        font-weight: bold;
    }

    .order-status {
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        text-align: center;
    }

    .status-pending {
        background: rgba(255, 193, 7, 0.2);
        color: #ffc107;
        border: 1px solid rgba(255, 193, 7, 0.5);
    }

    .status-completed {
        background: rgba(76, 175, 80, 0.2);
        color: #4caf50;
        border: 1px solid rgba(76, 175, 80, 0.5);
    }

    .status-transit {
        background: rgba(33, 150, 243, 0.2);
        color: #2196f3;
        border: 1px solid rgba(33, 150, 243, 0.5);
    }

    .view-all-link {
        color: #d4a574;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
    }

        .view-all-link:hover {
            color: #e0b586;
        }

    @@media (max-width: 968px) {
        .admin-title

    {
        font-size: 2rem;
    }

    .stats-grid {
        grid-template-columns: repeat(2, 1fr);
    }

    .order-row {
        grid-template-columns: 1fr;
        text-align: center;
    }

    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

