    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #e0b586 0%, #d4a574 100%);
            transform: translateY(-2px);
        }

    .btn-secondary {
        background: transparent;
        border: 2px solid #d4a574;
        color: #d4a574;
    }

        .btn-secondary:hover {
