@page "/login"


<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1 class="auth-title">Բարի վերադարձ</h1>
            <p class="auth-subtitle">Մուտք գործեք ձեր երաժշտական ճանապարհորդությունը շարունակելու համար</p>
        </div>

        <div class="auth-form">
            <div class="form-group">
                <label class="form-label">Մուտքանուն</label>
                <input type="username" class="form-input" placeholder="Մուտքագրեք ձեր մուտքանունը" @bind="username" />
            </div>

            <div class="form-group">
                <label class="form-label">Գաղտնաբառ</label>
                <input type="password" class="form-input" placeholder="Մուտքագրեք ձեր գաղտնաբառը" @bind="password" />
            </div>

            
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="error-message">
                    @errorMessage
                </div>
            }

            <button class="btn-submit" @onclick="HandleLogin" disabled="@isLoading">
                @if (isLoading)
                {
                    <span>Բեռնվում է...</span>
                }
                else
                {
                    <span>Մուտք գործել</span>
                }
            </button>

            <div class="form-divider">
                <span>կամ</span>
            </div>

            <div class="signup-link">
                <span>Դեռ հաշիվ չունե՞ք։</span>
                <a href="/register" class="link">Գրանցվել</a>
            </div>
        </div>
    </div>
</div>


