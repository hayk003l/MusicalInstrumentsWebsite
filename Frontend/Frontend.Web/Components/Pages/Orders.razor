@page "/orders"
@using Microsoft.AspNetCore.Authorization

<div class="orders-container"> 
    <div class="page-header">
        <h1 class="page-title">Իմ պատվերները</h1>
    </div>


    <div class="orders-list">

        @if (OrderForUser is null)
        {
            <p>Loading...</p>
        }
        else 
        {
            @foreach(var Order in OrderForUser)
            {
                <div class="order-card">
                    <div class="order-header">
                        <div class="order-info">
                            <span class="order-date">@Order.ShippingDetails.Address</span>
                        </div>
                        <span class="order-status status-processing">@Order.ShippingDetails.Status</span>
                    </div>

                    <div class="order-items">
                        <div class="order-item">
                            <div class="item-info">
                                <span class="item-name">@Order.Item.Name</span>
                            </div>
                        </div>
                    </div>
                    <div class="order-footer">
                        <span class="order-total">Գումար: <strong>@Order.Item.Amount Դր․</strong></span>
                    </div>
                </div>
            }
        }

    </div>

    <div class="no-orders" style="display: none;">
        <div class="empty-state">
            <span class="empty-icon">📦</span>
            <h3>No orders yet</h3>
            <p>Start shopping to see your orders here</p>
            <a href="/items" class="btn-shop">Browse Instruments</a>
        </div>
    </div>
</div>
