        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(212, 165, 116, 0.3);
        border-radius: 16px;
        padding: 3rem;
        width: 100%;
        max-width: 500px;
        backdrop-filter: blur(10px);
    }

    .auth-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .auth-title {
        font-size: 2.5rem;
        color: #d4a574;
        margin-bottom: 0.5rem;
    }

    .auth-subtitle {
        color: #b8b8b8;
        font-size: 1rem;
        line-height: 1.5;
    }

    .auth-form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .form-label {
        color: #d4a574;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .form-input {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(212, 165, 116, 0.3);
        border-radius: 8px;
        padding: 1rem;
        color: #e8e8e8;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .form-input:focus {
            outline: none;
