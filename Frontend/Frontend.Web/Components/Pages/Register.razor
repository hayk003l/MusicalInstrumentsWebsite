@page "/register"
@using Shared.DataTransferObjects

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1 class="auth-title">Ստեղծել հաշիվ</h1>
            <p class="auth-subtitle">Միացե՛ք մեր երաժշտական համայնքին</p>
        </div>

        <div class="auth-form">
            <div class="form-group">
                <label class="form-label">Անուն</label>
                <input type="text" class="form-input" placeholder="Անուն" @bind="firstname" />
             </div>

            <div class="form-group">
                <label class="form-label">Ազգանուն</label>
                <input type="text" class="form-input" placeholder="Ազգանուն" @bind="lastname" />
            </div>
            <div class="form-group">
                <label class="form-label">Մուտքանուն</label>
                <input type="text" class="form-input" placeholder="Մուտքանուն" @bind="username" />
            </div>
            
            <div class="form-group">
                <label class="form-label">Գաղտնաբառ</label>
                <input type="password" class="form-input" placeholder="Ստեղծեք գաղտնաբառ" @bind="password" />
            </div>

            <div class="form-group">
                <label class="form-label">Email</label>
                <input type="email" class="form-input" placeholder="your.email@example.com" @bind="email" />
            </div>
            <div class="form-group">
                <label class="form-label">Հեռախոսահամար</label>
                <input type="tel" class="form-input" placeholder="Հեռախոսահամար" @bind="phoneNumber" />
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="error-message">@errorMessage</div>
            }

            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="success-message">@successMessage</div>
            }

            <button class="btn-submit" @onclick="HandleRegister" disabled="@isLoading">
                @if (isLoading)
                {
                    <span>Բեռնվում է...</span>
                }
                else
                {
                    <span>Գրանցվել</span>
                }
            </button>

            <div class="form-divider">
                <span>կամ</span>
            </div>

            <div class="signup-link">
                <span>Արդեն ունե՞ք հաշիվ։</span>
                <a href="/login" class="link">Մուտք գործել</a>
            </div>
        </div>
    </div>
</div>
